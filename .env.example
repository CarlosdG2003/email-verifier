# =================================
# EMAIL VERIFIER - VARIABLES DE ENTORNO
# =================================

# Copiar este archivo a .env y configurar valores reales

# API Keys (opcional)
HIBP_API_KEY=your_haveibeenpwned_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Redis (opcional, para cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Rate Limiting (requests per minute)
DNS_RATE_LIMIT=100
HTTP_RATE_LIMIT=60
API_RATE_LIMIT=10

# Timeouts (segundos)
DNS_TIMEOUT=5
HTTP_TIMEOUT=10
SMTP_TIMEOUT=15
